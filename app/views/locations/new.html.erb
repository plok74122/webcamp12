<h1>New Location(<%= @event.name %>)</h1>

<%= form_for @location ,:url => event_locations_path(@event) , :method => :post do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name , :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit :class => "btn btn-default" %>
    </div>
<% end %>